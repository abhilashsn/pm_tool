<h3> Add new Project </h3>
<%= form_for @project do |f|%>
	
<label> Name</label>
<%=  f.text_field :name %><br/>

<label> Client </label>
<%= f.collection_select :client_id, current_user.clients, :id, :company, prompt: "select client"%><br/>

<label> Description </label>
<%= f.text_area :description%></br>

<label> Start Date </label>
<%= f.date_select :start_date, order: [:day, :month, :year], start_year: (Date.today.beginning_of_year.year - 1), include_blank: true %><br/>

<label>Status:</label><br/>
<%= f.select :status, %w[new on-going completed]%><br/>

<%= f.submit %>


<%end%>
